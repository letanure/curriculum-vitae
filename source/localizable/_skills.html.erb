<div id="skills">
  <h2>
    <%= I18n.t("skills.title") %>
  </h2>
  <ul>
    <% data.curriculum.skills.each do |skill| %>
      <% if skill.split("=")[1].to_s != '' %>
        <li class="skill-with-bar">
          <span class="skill-name">
            <%= skill.split("=")[0] %>
          </span>
          <progress max="10" value="<%= skill.split("=")[1] %>">
            <span class="progress-value" style="width: <%= skill.split("=")[1].to_i * 10 %>%"><%= skill.split("=")[1].to_i * 10 %>%</span>
          </progress>
        </li>
      <% end %>
    <% end %>
    <% data.curriculum.skills.each do |skill| %>
      <% if skill.split("=")[1].to_s == '' %>
        <li>
          <%= skill.split("=")[0] %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>